<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>test</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container">
        <div class="sidebar">
            <a href="/"></a>
        </div>
        <div class="content">
            <h1>CUSTOMER</h1>
            <a href="/create_C">Add Customer</a>
            <table>
                <tr>
                    <th>CustomerID</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% for(let i=0; i < customer.length; i++) { %>
                    <tr>
                        <td>
                            <%= customer[i].CustomerID %>
                        </td>
                        <td>
                            <%= customer[i].Firstname %>
                        </td>
                        <td>
                            <%= customer[i].Lastname %>
                        </td>
                        <td>
                            <%= customer[i].Email %>
                        </td>
                        <td>
                            <%= customer[i].Phone %>
                        </td>
                        <td>
                            <a href="/update_C/<%= customer[i].CustomerID %>">Edit</a>
                        </td>
                        <td>
                            <a href="/deleteC/<%= customer[i].CustomerID %>">Delete</a>
                        </td>
                    </tr>
                    <% } %>
            </table>
        </div>
    </div>
</body>

</html>